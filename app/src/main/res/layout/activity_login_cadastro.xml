<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".loginCadastro">


    <!--Top content-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayoutBgLogin"
        android:layout_width="411dp"
        android:layout_height="458dp"
        android:background="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/Login_Title"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/text_input"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailTxtInputLogin"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/text_input"
                android:gravity="center"
                android:hint="@string/Usuario_input"
                android:inputType="textEmailAddress"
                android:textColorHint="#626262" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/text_input"
            app:layout_constraintBottom_toTopOf="@+id/entrarBtnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/senhaTxtInputLogin"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/text_input"
                android:gravity="center"
                android:hint="@string/Senha_Input"
                android:inputType="textPassword"
                android:textColorHint="#626262" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/entrarBtnLogin"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/button"
            android:hint="@string/entrar_btn"
            android:onClick="btnCLickLogin"
            android:textColorHint="#fff"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="9dp"
            android:text="@string/Cadastrar_Title"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/entrarBtnLogin" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="96dp"
            android:layout_marginEnd="95dp"
            android:background="@drawable/text_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nomeTxtInputLogin"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/text_input"
                android:gravity="center"
                android:hint="@string/Nome_Input"
                android:inputType="textPersonName"
                android:textColorHint="#626262" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/cadastrarBtnLogin"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="59dp"
            android:background="@drawable/button"
            android:hint="@string/cadastrar_btn"
            android:onClick="btnClickCadastro"
            android:textColorHint="#fff"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/facebookBtnLogin"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/fb_btn"
        android:drawableStart="@drawable/fb_logo"
        android:drawableLeft="@drawable/fb_logo"
        android:hint="@string/fb_btn_login"
        android:onClick="btnDummyLogin"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#fff"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/googleBtnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/googleBtnLogin"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:background="@drawable/google_btn"
        android:drawableStart="@drawable/google_logo"
        android:drawableLeft="@drawable/google_logo"
        android:hint="@string/google_btn_login"
        android:onClick="btnDummyLogin"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/primaryTextColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/icone_sol_transition_2"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toTopOf="@+id/facebookBtnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

